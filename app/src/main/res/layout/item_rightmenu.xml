<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rightmenuItem_relative"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    android:paddingRight="15dp"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/rightmenuItem_linearLayout"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/rightmenuItem_img_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher_background" />
    </LinearLayout>

    <TextView
        android:id="@+id/rightmenuItem_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/rightmenuItem_linearLayout"
        android:layout_toRightOf="@+id/rightmenuItem_linearLayout"
        android:text="日程提醒"
        android:textSize="16sp" />


</RelativeLayout>

